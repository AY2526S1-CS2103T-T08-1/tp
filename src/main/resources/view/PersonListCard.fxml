<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17"
      fx:id="cardPane"
      id="cardPane"
      HBox.hgrow="ALWAYS">

    <AnchorPane HBox.hgrow="ALWAYS" maxHeight="Infinity">
        <VBox AnchorPane.leftAnchor="0"
              AnchorPane.topAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0"
              spacing="4"
              VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="5" right="10" bottom="30" left="15"/>
            </padding>

            <HBox spacing="4" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="id" styleClass="cell_big_label"/>
                <Label fx:id="name" styleClass="cel l_big_label"/>
            </HBox>

            <FlowPane fx:id="tags" prefWrapLength="200" hgap="4" HBox.hgrow="ALWAYS"/>
            <Label fx:id="phone" styleClass="cell_small_label" wrapText="true"/>
            <Label fx:id="address" styleClass="cell_small_label" wrapText="true"/>
            <Label fx:id="email" styleClass="cell_small_label" wrapText="true"/>
        </VBox>

        <!-- Status pinned bottom-right -->
        <Label fx:id="status" id="status"
               AnchorPane.bottomAnchor="8"
               AnchorPane.rightAnchor="10"
               text="ACTIVE"/>
    </AnchorPane>
</HBox>
