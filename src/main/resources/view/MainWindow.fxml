<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.scene.control.Label?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/17"
         type="javafx.stage.Stage"
         title="Address App"
         minWidth="450" minHeight="600"
         onCloseRequest="#handleExit">

    <icons>
        <Image url="@/images/address_book_32.png"/>
    </icons>

    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>

            <!-- MAIN LAYOUT -->
            <VBox prefHeight="Infinity" prefWidth="Infinity">

                <!-- Menu bar -->
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu text="File">
                        <MenuItem text="Exit" onAction="#handleExit"/>
                    </Menu>
                    <Menu text="Help">
                        <MenuItem fx:id="helpMenuItem" text="Help" onAction="#handleHelp"/>
                    </Menu>
                </MenuBar>

                <!-- Command box -->
                <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <!-- Result display -->
                <StackPane fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                           minHeight="100" prefHeight="100" maxHeight="100"
                           VBox.vgrow="NEVER">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <!-- Responsive HBox container -->
                <HBox fx:id="container" styleClass="pane-with-border" VBox.vgrow="ALWAYS" spacing="5">
                    <VBox fx:id="personList" styleClass="pane-with-border"
                          HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                        <!-- Header label -->
                        <Label text="  Clients" styleClass="label-display"/>

                        <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <VBox fx:id="bookingList" styleClass="pane-with-border"
                          HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>

                        <!-- Header label -->
                        <Label text="  Bookings" styleClass="label-display"/>

                        <StackPane fx:id="bookingListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>
                </HBox>

                <!-- Status bar -->
                <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER"/>
            </VBox>
        </Scene>
    </scene>
</fx:root>
