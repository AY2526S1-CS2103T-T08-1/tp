<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<HBox xmlns:fx="http://javafx.com/fxml/1" id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17">
    <AnchorPane HBox.hgrow="ALWAYS" maxHeight="Infinity">
        <VBox AnchorPane.leftAnchor="0"
              AnchorPane.topAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0"
              spacing="4"
              VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:id="description" text="\$first" styleClass="cell_big_label"/>
            </HBox>
            <Label fx:id="date" styleClass="cell_small_label" text="\$date"/>
            <Label fx:id="client" text="\$first" styleClass="cell_small_label"/>
            <Label fx:id="packageType" text="\$packageType" styleClass="cell_small_label"/>
            <FlowPane fx:id="notes" prefWrapLength="200" hgap="4" HBox.hgrow="ALWAYS"/>
        </VBox>
            <!-- Status pinned bottom-right -->
            <Label fx:id="status" id="status"
                   AnchorPane.bottomAnchor="8"
                   AnchorPane.rightAnchor="10"
                   text="ACTIVE"/>
    </AnchorPane>
</HBox>
