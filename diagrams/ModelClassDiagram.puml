@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class UniqueBookingList
Class Person
Class Address
Class Email
Class Name
Class Phone
Class Tag
Class Booking {
    isDone : Boolean
}
Class Description
Class DateTime
Enum PackageType

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .right.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
AddressBook *--> "1" UniqueBookingList
' Collections to entities
UniqueBookingList -down-> "~* all" Booking
UniquePersonList -down-> "~* all" Person

' Booking attributes (go down from Booking)
Booking *-down-> PackageType
Booking *-down-> Description
Booking *-down-> DateTime
Booking *-down-> "*" Tag
Booking *-down-> Name

' Person attributes (go down from Person)
Person *-down-> Name
Person *-down-> Phone
Person *-down-> Email
Person *-down-> Address
Person *-down-> Status
Person *-down-> "*" Tag

' ModelManager filtered relationships - go down to avoid crossing
ModelManager -down-> "~* modified" Booking
ModelManager -down-> "~* modified" Person

' Hidden links to organize bottom tier
PackageType -[hidden]right-> Description
Description -[hidden]right-> DateTime
DateTime -[hidden]right-> Name
Name -[hidden]right-> Phone
Phone -[hidden]right-> Email
Email -[hidden]right-> Address

Person -[hidden]up-> I
UniquePersonList -[hidden]right-> I
@enduml
